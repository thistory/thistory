generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  passwordHash        String   @map("password_hash")
  name                String?
  notificationEnabled Boolean  @default(false) @map("notification_enabled")
  notificationTime    String   @default("21:00") @map("notification_time")
  timezone            String   @default("UTC")
  aiProvider          String   @default("openai") @map("ai_provider")
  aiModel             String   @default("gpt-4o-mini") @map("ai_model")
  ollamaUrl           String   @default("http://localhost:11434") @map("ollama_url")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  conversations     Conversation[]
  insights          Insight[]
  streak            Streak?
  pushSubscriptions PushSubscription[]

  @@map("users")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model Conversation {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String?
  summary   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
  insights Insight[]

  @@index([userId])
  @@map("conversations")
}

model Message {
  id             String      @id @default(cuid())
  conversationId String      @map("conversation_id")
  role           MessageRole
  content        String
  createdAt      DateTime    @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("messages")
}

model Insight {
  id             String      @id @default(cuid())
  conversationId String      @map("conversation_id")
  userId         String      @map("user_id")
  type           InsightType
  content        String
  tags           Json        @default("[]")
  createdAt      DateTime    @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([conversationId])
  @@index([type])
  @@map("insights")
}

model Streak {
  id                   String    @id @default(cuid())
  userId               String    @unique @map("user_id")
  currentStreak        Int       @default(0) @map("current_streak")
  longestStreak        Int       @default(0) @map("longest_streak")
  lastConversationDate DateTime? @map("last_conversation_date")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("streaks")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum InsightType {
  GOAL
  CONCERN
  ACTION
  HABIT
}
